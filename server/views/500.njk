{% extends 'layout.njk' %}

{% block content %}
  <div class="govuk-width-container">
    <div class="govuk-main-wrapper--auto-spacing">
      <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">
          <h1 class="govuk-heading-xl">Sorry, there is a problem with the service</h1>
          <p class="govuk-body">Try again later.</p>
          <p>Status code: {{ model.statusCode }}</p>
          <p>Message: {{ model.payload.message }} 
          <p>Error: {{ model.payload.error }}</p>
        </div>
      </div>
    </div>
  </div>
{% endblock %}
