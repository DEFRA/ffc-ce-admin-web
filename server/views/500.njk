{% extends 'layout.njk' %}

{% block content %}
  <div class="govuk-width-container">
    <div class="govuk-main-wrapper--auto-spacing">
      <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">
        <span class="govuk-caption-xl">Dashboard</span>
          <h1 class="govuk-heading-xl">Sorry, there is a problem with the service</h1>          
          <p class="govuk-body">Details:</p>
          <p class="govuk-body">Status code: {{ model.statusCode }}</p>
          <p class="govuk-body">Message: {{ model.payload.message }} 
          <p class="govuk-body">Error: {{ model.payload.error }}</p>
          <p class="govuk-body">Headers:</p> 
          {% for header, value in model.headers %}
            <p class="govuk-body">{{ header }}: {{ value }}</p> 
          {% endfor %}
        </div>
      </div>
    </div>
  </div>
{% endblock %}
