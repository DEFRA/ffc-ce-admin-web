{% extends 'layout.njk' %}

{% from "govuk/components/button/macro.njk" import govukButton %}

{% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      <span class="govuk-caption-xl">Dashboard</span>
      <h1 class="govuk-heading-xl">Agreements calculator administration</h1>
      <p class="govuk-body">Use this service to:</p>

      <ul class="govuk-list govuk-list--bullet">
        <li>configure action rules for the Agreements calculator service</li>
      </ul>

      <form method="GET" action="/actions">
        {{ govukButton({
          classes: "govuk-!-margin-top-2 govuk-!-margin-bottom-8",
          isStartButton: true,
          text: "Configure rules"
        }) }}
      </form>
    </div>
  </div>
{% endblock %}
